@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Settings";
    var activeTab = TempData["ActiveTab"]?.ToString() ?? "editProfile"; // Default to "editProfile" if no tab is specified
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <h1 class="mt-4">@ViewData["Title"]</h1>

                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link @(activeTab == "editProfile" ? "active" : "")" href="#editProfile" data-bs-toggle="tab">Edit profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeTab == "addPT" ? "active" : "")" href="#addPT" data-bs-toggle="tab">Add new PT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeTab == "deleteProfile" ? "active" : "") text-danger" href="#deleteProfile" data-bs-toggle="tab">Delete profile</a>
                    </li>
                </ul>

                <div class="tab-content mt-3">
                    <!-- Edit Profile Tab -->
                    <div class="tab-pane fade @(activeTab == "editProfile" ? "show active" : "")" id="editProfile">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                Edit Profile
                            </div>
                            <div class="card-body">
                                <form id="profileForm" enctype="multipart/form-data" method="post" asp-action="SaveProfile">
                                    <!-- Profile Photo Section -->
                                    <div class="row mb-3">
                                        <div class="col-sm-12 text-center">
                                            <img id="profileImage" src="@ViewBag.ProfileImageUrl" alt="Profile Photo" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                                            <input type="file" id="photo" name="photo" class="d-none" accept="image/*" />
                                            <br />
                                            <button type="button" class="btn btn-primary mt-2" onclick="document.getElementById('photo').click();">
                                                <i class="bi bi-pencil"></i> Change Image
                                            </button>
                                        </div>
                                    </div>
                                    <!-- Name Field (Read-only) -->
                                    <div class="row mb-3">
                                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="name" value="@ViewBag.Name" readonly />
                                        </div>
                                    </div>
                                    <!-- Email Field (Read-Only) -->
                                    <div class="row mb-3">
                                        <label for="Email" class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="email" class="form-control" id="Email" value="@ViewBag.Email" readonly />
                                        </div>
                                    </div>
                                    <!-- Role Field (Read-only) -->
                                    <div class="row mb-3">
                                        <label for="role" class="col-sm-2 col-form-label">Role</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="role" value="Admin" readonly />
                                        </div>
                                    </div>
                                    <!-- Rate Field (Editable) -->
                                    <div class="row mb-3">
                                        <label for="rate" class="col-sm-2 col-form-label">Hourly Rate</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="rate" name="rate" value="R400" />
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </form>

                            </div>
                        </div>
                    </div>

                    <!-- Add New PT Tab -->
                    <div class="tab-pane fade @(activeTab == "addPT" ? "show active" : "")" id="addPT">
                        <div class="card">
                            <div class="card-header bg-warning text-white">
                                Add New PT
                            </div>
                            <div class="card-body">
                                <form id="addPTForm" method="post" action="/Admin/AddNewPT">
                                    <div class="row mb-3">
                                        <label for="ptName" class="col-sm-2 col-form-label">PT Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="ptName" name="ptName" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="ptEmail" class="col-sm-2 col-form-label">PT Email</label>
                                        <div class="col-sm-10">
                                            <input type="email" class="form-control" id="ptEmail" name="ptEmail" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="ptPassword" class="col-sm-2 col-form-label">Password</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="ptPassword" name="ptPassword" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="ptConfirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" id="ptConfirmPassword" name="ptConfirmPassword" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="ptRate" class="col-sm-2 col-form-label">PT Rate</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="ptRate" name="ptRate" required />
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-warning">Add</button>
                                </form>
                                <!-- Success Popup -->
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        @TempData["SuccessMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>


                    <!-- Delete Profile Tab -->
                    <div class="tab-pane fade @(activeTab == "deleteProfile" ? "show active" : "")" id="deleteProfile">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                Delete Profile
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="alert alert-danger" role="alert">
                                        Are you sure you want to delete your profile? This action cannot be undone.
                                    </div>
                                    <button type="submit" class="btn btn-danger">Delete Profile</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        // Preview selected profile image
        document.getElementById('photo').addEventListener('change', function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('profileImage');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    </script>

</body>
</html>
