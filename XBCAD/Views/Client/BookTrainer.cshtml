@model IEnumerable<XBCAD.ViewModels.Trainer>

@{
    ViewData["Title"] = "Book a Trainer";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<h2>Book session with a Trainer</h2>
<div class="trainer-selection-container">
    <p>Select a trainer to work with</p>
    <div class="trainer-list">
        @foreach (var trainer in Model)
        {
            <div class="trainer-card">
                <img src="@trainer.ProfilePictureUrl" alt="@trainer.Name" class="trainer-image" />
                <div class="trainer-info">
                    <h4>@trainer.Name</h4>
                    <p>@trainer.HourlyRate/hour</p>
                    <!-- Pass the trainer's ID in the button's link -->
                    <a href="@Url.Action("TrainerAvailability", "Client", new { id = trainer.Id })" class="btn btn-primary">View Availability</a>
                </div>
            </div>
        }
    </div>
</div>
