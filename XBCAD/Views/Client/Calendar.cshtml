@{
    ViewData["Title"] = "Client Calendar";
    Layout = "~/Views/Shared/_ClientLayout.cshtml"; // Ensure this is your actual layout file for clients.
}

<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4" style="font-size: 2rem; font-weight: 600;">Client Calendar</h2>

            @if (!string.IsNullOrEmpty(ViewBag.CalendarEmbedLink))
            {
                <div class="calendar-container d-flex justify-content-center mb-4">
                    <iframe src="@ViewBag.CalendarEmbedLink" style="border: 0; width: 100%; height: 600px;" frameborder="0" scrolling="no"></iframe>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <p class="mb-2">Unable to load Google Calendar. Please sign in to view your calendar.</p>
                    <a href="@Url.Action("GoogleLogin", "Client")" class="btn btn-info btn-lg">Sign in to Google Calendar</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 900px;
    }

    .calendar-container iframe {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card {
        background-color: #f8f9fa;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #333;
    }

    .btn-lg {
        font-size: 1.2rem;
        padding: 10px 20px;
    }

    .alert {
        margin-top: 20px;
    }
</style>
