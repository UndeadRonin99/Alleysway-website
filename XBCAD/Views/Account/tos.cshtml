            }

        .btn-primary {
            background-color: #ed8240;
            border: none;
            padding: 0.75rem 1.5rem;
            text-transform: uppercase;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #c5692e;
            }

        .programs-section {
            padding: 4rem 2rem;
        }

        .program-card {
            position: relative;
            height: 400px; /* Set a fixed height for cards */
            overflow: hidden;
            border: none;
            border-radius: 10px;
            color: #ffffff;
        }

            .program-card .card-bg {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-size: cover;
                background-position: center;
                filter: brightness(0.5); /* Darken the background for better text visibility */
                z-index: 1;
            }

            .program-card .card-content {
                position: relative;
                z-index: 2;
                padding: 2rem;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
            }

            .program-card h3 {
                font-weight: bold;
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }

            .program-card p {
                font-size: 1rem;
                margin-bottom: 1.5rem;
            }

            .program-card .btn {
                border: 2px solid #fff;
                text-transform: uppercase;
                font-weight: bold;
                transition: background-color 0.3s, color 0.3s;
            }

                .program-card .btn:hover {
                    background-color: #fff;
                    color: #000;
                }

        .stat-card {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            color: #ffffff;
            text-align: center;
            transition: transform 0.3s ease;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-card-content {
            position: relative;
            z-index: 2;
            text-align: center;
            background: rgba(0, 0, 0, 0.5);
            padding: 1rem;
            border-radius: 5px;
        }

        .stat-card:hover {
            transform: scale(1.05);
        }



        .testimonials-section {
            padding: 4rem 2rem;
        }
    </style>
