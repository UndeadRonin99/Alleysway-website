        }

        .top-section {
            position: relative;
            padding: 5rem 2rem;
            color: #f5f5f5;
            background-size: cover;
            background-attachment: fixed;
            width: 100vw; /* Ensure it spans the entire viewport width */
            margin: 0; /* Remove any margin that might create gaps */
            left: 50%;
            transform: translateX(-50%); /* Center the section */
        }

            .top-section .content {
                position: relative;
                z-index: 2;
                padding: 3rem 2rem;
            }

            .top-section h1 {
                font-size: 5rem;
                font-weight: bold;
                text-transform: uppercase;
                font-family: Anton, sans-serif;
            }

            .top-section h3 {
                font-size: 2rem;
                font-weight: bold;
            }

            .top-section h4 {
