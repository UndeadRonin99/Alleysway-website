            <div class="stat-card" style="background-image: url('/images/gallery_5.png'); height: 400px;">
            </div>
        </div>

        <!-- Larger Card Spanning 2/3 Width -->
        <div class="col-md-8 mb-4">
            <div class="stat-card" style="background-image: url('/images/gallery_6.png'); height: 400px;">
            </div>
        </div>
        <div class="col-md-8 mb-4">
