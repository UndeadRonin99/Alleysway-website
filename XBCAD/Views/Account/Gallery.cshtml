@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
    ViewData["Title"] = "Gallery - Alleysway";

}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Anton' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Antonio' rel='stylesheet'>

    <style>
        body {
            background-color: #121212;
            color: #f5f5f5;
            font-family: Antonio, sans-serif;
        }

        .top-section {
            position: relative;
            padding: 5rem 2rem;
            color: #f5f5f5;
            background-size: cover;
            background-attachment: fixed;
            width: 100vw; /* Ensure it spans the entire viewport width */
            margin: 0; /* Remove any margin that might create gaps */
            left: 50%;
            transform: translateX(-50%); /* Center the section */
        }

            .top-section .content {
                position: relative;
                z-index: 2;
                padding: 3rem 2rem;
            }

            .top-section h1 {
                font-size: 5rem;
                font-weight: bold;
                text-transform: uppercase;
                font-family: Anton, sans-serif;
            }

            .top-section h3 {
                font-size: 2rem;
                font-weight: bold;
            }

            .top-section h4 {
                font-size: 1.75rem;
                font-weight: bold;
            }

            .top-section p.lead {
                font-size: 1.2rem;
                line-height: 1.6;
            }

        .btn-primary {
            background-color: #FF6600;
            border: none;
            padding: 0.75rem 1.5rem;
            text-transform: uppercase;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .stat-card {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            color: #ffffff;
            text-align: center;
            transition: transform 0.3s ease;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-card-content {
            position: relative;
            z-index: 2;
            text-align: center;
            background: rgba(0, 0, 0, 0.5);
            padding: 1rem;
            border-radius: 5px;
        }

        .stat-card:hover {
            transform: scale(1.05);
        }


    </style>
</head>

<!-- Top Section -->
<div class="top-section text-center text-white" style="background-image: url('/images/gallery_title.png'); width: 100vw">
    <div class="content">
        <div style="height:250px"></div>
        <h1>The road to success is always under construction.</h1>
        <h1>So is our gym.</h1>
        <div style="height:300px"></div>
        <div class="row align-items-center" style="background-color:##171717">
            
            <div class="col-md-6">
                <img src="/images/gallery_1.png" alt="Alleysway gym equipment" class="img-fluid rounded">
            </div>
            <div class="col-md-6 mb-4">

                <h3 class="lead">
                    FROM BOXING TO BICEPS...
                </h3>
                <p class="lead">
                    Our gym caters to all. Our equipment caters to different training styles. From ropes to racks, bags to bars; we’ve got it
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section with Cards -->
<div class="container-fluid statistics-section">
    <div class="row">
        <!-- Larger Card Spanning 2/3 Width -->
        <div class="col-md-8 mb-4">
            <div class="stat-card" style="background-image: url('/images/gallery_2.png'); height: 500px;">
            </div>
        </div>

        <!-- Smaller Card Spanning 1/3 Width -->
        <div class="col-md-4 mb-4">
            <div class="stat-card" style="background-image: url('/images/gallery_3.png'); height: 500px;">

            </div>
        </div>

        <!-- Two Smaller Cards Spanning Half of the Width Each -->
        <div class="col-md-6 mb-4">
            <div class="stat-card" style="background-image: url('/images/gallery_4.png'); height: 350px;">
            </div>
        </div>
        <div class="col-md-6 mb-4">
